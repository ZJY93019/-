#斐波那契数列
def good_fibonacci(n):
    if n <= 1:
        return (n, 0)
    else:
        (a, b) = good_fibonacci(n - 1)
        return (a+b, a)

#求列表的前 n 项和
def good_fibonacci(n):
    if n <= 1:
        return (n, 0)
    else:
        (a, b) = good_fibonacci(n - 1)
        return (a+b, a)

#逆向重置序列
def treverse(S, start, stop):
    if start < stop:
        S[start], S[stop - 1] = S[stop - 1], S[start]
        treverse(S, start + 1, stop - 1)
